<h1>I KNOW ALL UR SECRETZ</h1>

<h3> Secrets </h3>
<% @secrets.each do |secret| %>
	<p>
		<%= secret.content %>
	</p>
	<p>
		<span><%= secret.likes.count%></span>
		<% if current_user.secrets_liked.exists? secret.id %>
			<a href="/likes/<%= secret.id %>/unlike" data-method="delete">Unlike</a>
		<%else%>
			<a href="/likes/<%= secret.id %>/liked" data-method="post">Like</a>
		<% end %>
		<% if secret.user_id == current_user.id %>
			<a href="/secrets/<%= secret.id %>/destroy" data-method = "delete"> Delete </a>
		<% end %>
	</p>
	<hr>
<% end %>
