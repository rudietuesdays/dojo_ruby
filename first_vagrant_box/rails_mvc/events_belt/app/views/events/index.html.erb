  <tr>
    <td><a href="/events/<%= event.id %>"><%= event.name %></a></td>
    <td><%= event.date.strftime("%B %e, %Y") %></td>
    <td><%= event.city %>, <%= event.state %> </td>
    <td><%= event.user.first_name %></td>
    <td>
      <% if event.user == current_user %>
        <a href="/events/<%= event.id %>/edit">Edit</a>
        <a href="/events/<%= event.id %>" data-method="delete">Delete</a>
      <% else %>
        <% if @user.attends.exists?(event.id) %>
          Joining <a href="/attendances/<%= event.id %>" data-method="delete">Cancel</a>
        <% else %>
          <a href="/attendances/<%= event.id %>" data-method="post">Join</a>
        <% end %>
      <% end %>
    </td>
  </tr>
  <% end %>
  <% end %>
  </tbody>
</table>
